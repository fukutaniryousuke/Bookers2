<% if @model == 'user' %>
  <h3>Users search for："<%= @content %>"</h3>
  <table class="table">
      <thead>
        <tr>
          <th><p>Image</p></th>
          <th><p>Name</p></th>
          <td colspan ="3"></td>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |user| %>
         <tr>
           <td><%= image_tag user.get_profile_image(100,100) %></td>
           <td><%= user.name %></tb>
           <td>フォロー数：<%= user.followings.count %></td>
           <td>フォロワー数：<%= user.followers.count %></td>
           <% if current_user.following?(user) %>
             <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
           <% else %>
             <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
           <% end %>
           <td><%= link_to "Show", user_path(user.id) %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
<% else @model == 'book' %>
  <h3 class="ml-3">Books search for："<%= @content %>"</h3>
    <table class="table">
       <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Body</th>
           <th colspan ="3"></th>
         </tr>
       </thead>

       <tbody>
         <% @records.each do |book| %>

         <tr>
           <td>
             <%= link_to user_path(book.user) do %>
             <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %>
           </td>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>


         　　<% if book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(book), method: :delete do %>
              <span class="text-danger">♥<%= book.favorites.count %></span>
              <% end %>
            </td>
              <% else %>
            <td>
              <%= link_to book_favorites_path(book), method: :post do %>
             ♡<%= book.favorites.count %>
              <% end %>
            <% end %>
            </td>
            <td><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>

         <% end %>

         </tr>
       </tbody>
     </table>
<% end %>