<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'profile', user: @user %>
     <div class="row">
     <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
     </div>
     <%= render 'books/list', book: @booknew %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2 class="mt-3">Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th><p>Image</p></th>
          <th><p>Name</p></th>
          <td colspan ="3"></td>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
         <tr>
           <td><%= image_tag user.get_profile_image(100,100) %></td>
           <td><%= user.name %></tb>
           <td>フォロー数：<%= user.followings.count %></td>
           <td>フォロワー数：<%= user.followers.count %></td>
           <% if current_user.following?(user) %>
             <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
           <% else %>
             <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
           <% end %>
           <td><%= link_to "Show", user_path(user.id) %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
       
    </div>
  </div>
</div>