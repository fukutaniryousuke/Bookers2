<div class="container">
  <div class="row">
    <div class="mx-auto">
    <h1>User info</h1>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>prohibited this obj from being saved:
    <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
    </ul>
     <% end %>


     <%= form_with model: @user do |f| %>
      <p>Name</p>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>

      <p>ProfileImage</p>
      <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept:"image/*" %>

      <p>Introduction</p>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%><br>
        <%= button_tag type: "submit", class: "btn btn-secondary" do %>
        <i class="fas fa-user-edit"></i>Update User
        <% end %>
      <% end %>
    </div>
  </div>
</div>