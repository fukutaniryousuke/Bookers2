<% if flash[:notice] %>
<div class= "flash">
    <%= flash[:notice] %>
    <% end %>

<h2>User info</h2>

<div>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name<%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>
<%= link_to "Update User", edit_user_path(@user.id) %>
</div>



<%= render 'books/list', book: @book %>

<h2>Books</h2>
<table>
    <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Body</th>
   <th colspan ="3"></th>
  </tr>
 </thead>
 
 <tbody>
<% @books.each do |book| %>
<tr>
<td><%= image_tag @user.get_profile_image(100,100) %></td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>
 </tbody>

</table>