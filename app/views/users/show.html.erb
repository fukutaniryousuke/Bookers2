<% if flash[:notice] %>
    <div class= "flash">
        <%= flash[:notice] %>
    <% end %>

    <div class= "container px-5 px-sm-0">
      <div class= "row">
        <div class= "col-md-3">
          <%= render 'users/profile', user: @user %>
           <div class="row">
             
            <% if current_user != @user %>
             <% if current_user.following?(@user) %>
               <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "p-1 mb-2 bg-info text-white rounded" %>
             <% else %>
               <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "p-1 mb-2 bg-success text-white rounded" %>
             <% end %>
            <% end %>
            <% if current_user == @user %>
             <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
             <% end %>
            <% end %>
           </div>
            <%= render 'books/list', book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
         <h2>Book detail</h2>
           <table class="table">
            <tbody>
              <% @books.each do |book| %>
                <tr>
                 <td>
                   <%= link_to user_path(book.user) do %>
                   <%= image_tag @user.get_profile_image(100,100) %>
                   <% end %>
                  </td>
                 <td><%= link_to book.title, book_path(book.id) %></td>
                 <td><%= book.body %></td>

                 <td>
         　　         <% if book.favorited_by?(current_user) %>

                     <%= link_to book_favorites_path(book), method: :delete do %>
                       ♥<%= book.favorites.count %>
                     <% end %>
                 </td>
                     <% else %>
                 <td>
                     <%= link_to book_favorites_path(book), method: :post do %>
                       ♡<%= book.favorites.count %>
                     <% end %>
                   <% end %>
                 </td>
                 <td><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>
                  <% end %>
                </tr>
            </tbody>
           </table>
        </div>
      </div>
    </div>